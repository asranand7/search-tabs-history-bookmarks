{
  "manifest_version": 3,
  "name": "Search Tabs, Bookmarks, and History",
  "version": "1.0",
  "permissions": [
    "tabs",
    "bookmarks",
    "history",
    "commands"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icon48.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "open-search-popup": {
      "suggested_key": {
        "default": "Ctrl+Shift+F"
      },
      "description": "Open the search popup"
    }
  }
}
